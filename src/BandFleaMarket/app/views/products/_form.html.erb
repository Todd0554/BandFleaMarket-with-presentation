<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field" style="width:500px;margin:auto;">
    <%= form.label :description%>
  <div style="background-color:white">
      <%= form.rich_text_area :description, style:"display:fixed;color:black" %>
  </div>

  </div>


  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :sort_id %>
    <%= form.select :sort_id, @sorts.map {|c| [c.sort, c.id]} %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture %>
  </div>
  
  <div class="actions">
    <%= form.submit style:"color:#32CCCC;" %>
  </div>
<% end %>
